<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity">

    <com.example.windowstatusbar.ArcView
        android:id="@+id/arc_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:arcHeight="100dp"
        app:bgColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.example.windowstatusbar.ArcImageView
        android:id="@+id/arc_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic4"
        app:arcHeight="10dp"
        app:layout_constraintTop_toBottomOf="@id/arc_view"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>